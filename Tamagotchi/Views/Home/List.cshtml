@using DigitalPet.Models;

<<h1>Meet Your Tamagotchi </h1>
<ul>
@if(Model.Count==0)
{
    <p>You have no Tamagotchis yet!</p>
   
} else
{
      @foreach (Tamagotchi pet in Model)
    {
    <li>@pet.GetName()</li>
   
    }
    
}
</ul>
 <form action ="feedButton/@Model.GetId()" method="post">
        <button type="submit">Feed Me!</button>
   </form>


